{% extends 'base.html.twig' %}

{% block title %}Store{% endblock %}

{% block body %}
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css">
<link href="https://fonts.googleapis.com/css2?family=Open+Sans:wght@300;400;700;800&display=swap" rel="stylesheet">
<link href="{{ asset('marktplace/kico.css')}}" rel="stylesheet" type="text/css" />
<link href="{{ asset('marktplace/paul.css')}}" rel="stylesheet" type="text/css" />

<div class="container">
    <div class="col-12">
        <div class="col-4">


            <section class="card-area ">
                <aside class="sidebar">
                    <div class="avatar">
                        <img src="{{ asset('imges/logo.png')}}" title="myCat" />
                    </div>
                    <nav class="nav">
                        <a href="{{ path('app_home')}}">home</a>
                        <a href="{{ asset('login')}}">login for add cat</a>
                        <a href="{{ path('app_cat_paix')}}">cat no free</a>
                        <a href="{{ path('app_aboutus')}}">About Us</a>
                        <a href="{{ asset('logout')}}">logout</a>
                    </nav>
                </aside>
            </section>
        </div>
        <div class="row">
            <div class="col-1">
            </div>
            <div class="col-2">
            </div>
            <div class="col-4 ">
                <div class="card" style="width: 18rem;">
                    <div class="card-body">
                        <h5 class="card-title">Add new cats</h5>
                        <p class="card-text">With supporting text below as a natural lead-in to additional content.</p>
                        <a href="{{ path('app_cat_new')}}" class="btn btn-primary">Go To add</a>
                    </div>
                </div>
            </div>
            {% for cat in cats %}
            <div class="col-4">
                <div class="card" style="width: 18rem;">
                    <img src="..." class="card-img-top" alt="...">
                    <div class="card-body">
                      <h5 class="card-title">Cat a  donne</h5>
                      <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                    </div>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item"> Brand : {{cat.brand}}</li>
                      <li class="list-group-item">Age : {{ cat.age}}</li>
                      <li class="list-group-item"> quantity :{{cat.quantite}} </li>
                    </ul>
                    <div class="card-body">
                      <a href="#" class="card-link">show doner</a>
                     
                    </div>
                  </div>
            </div>
            {% endfor %}
        </div>
    </div>
</div>

{% endblock %}